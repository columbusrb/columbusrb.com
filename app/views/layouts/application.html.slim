doctype html
html
  head
    meta(http-equiv="content-type" content="text/html; charset=utf-8")
    meta(name="language" content="en")
    meta(name="description" content="Columbus Ruby Brigade is a collection of professionals excited about Ruby")
    meta(name="keywords" content="ruby columbus programming usergroup rails javascript web development")

    title Columbus Ruby Brigade

    = csrf_meta_tags
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application", "//use.typekit.net/alz5etq.js"

    javascript:
      try{Typekit.load();}catch(e){}

  body
    #content
      #strip
        .since EST 2005 &mdash; #{@members} members strong
        .next-meeting
          span.label Next Meeting:
          span.date= formatted_date(@next_crb.time)

      #title
        img src=asset_path("logo.png")
        .name
          h1 Columbus
          h1 Ruby
          h1 Brigade

      section
        div style="background: #FEFCBF; color: #87791F; border-left: 0.5rem solid #87791F; padding: 1rem; margin-bottom: 0;"
          p style="font-weight: bold;" Columbus Ruby Brigade is looking for a new location!
          p style="margin-bottom: 0;"
            | For details, please read our&nbsp;
            a href="/2020/location" style="color: blue;" full announcement
            | .

      section
        #links
          = link_to "Meetup.com", "http://www.meetup.com/meetup-group-wEkWWOXK/"
          = link_to "Slack", "https://crb-slack-invite.herokuapp.com"
          = link_to "GitHub", "https://github.com/columbusrb"
          = link_to "Mailing List", "http://eepurl.com/cVggdb"
          = link_to "Twitter", "https://twitter.com/columbusrb"
          = link_to "Submit Talk", "https://docs.google.com/forms/d/e/1FAIpQLSfVTxPvX6kC5QCYV7RVivznRykhbJNBhUiuabaAhT2mbRI2Iw/viewform"

      section
        = yield

      section
        h2 Graciously Sponsored By
        #sponsors
          = link_to(image_tag('https://www.covermymeds.com/main/wp-content/themes/mana-child/images/CoverMyMeds_Logo.png', alt: 'CoverMyMeds'), 'http://covermymeds.com', target: '_blank')
          = link_to(image_tag('jetbrains.png', alt: 'JetBrains'), 'http://www.jetbrains.com', target: '_blank')
          = link_to(image_tag('oreilly.gif', alt: 'O\'Reilly'), 'http://www.oreilly.com', target: '_blank')
          = link_to(image_tag('rax.jpg', alt: 'Rackspace'), 'http://developer.rackspace.com', target: '_blank')
          = link_to(image_tag('td.png', alt: 'TestDouble'), 'http://testdouble.com', target: '_blank')
          = link_to(image_tag('http://www.balancedteam.org/wp-content/uploads/2012/08/mutuallyhuman-500minusCS-21.png', alt: 'MutuallyHuman'), 'http://www.mutuallyhuman.com', target: '_blank')
