<% provide(:title, "Edit Member") %>
<h1>Update your profile</h1>
<%= form_for(@member) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row-fluid">
    <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-1">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :github %>
      <%= f.text_field :github, class: 'form-control' %>

      <%= f.label :twitter %>
      <%= f.text_field :twitter, class: 'form-control' %>

      <%= f.label :website %>
      <%= f.text_field :website, class: 'form-control' %>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-0">
      <%= f.label :bio %>
      <%= f.text_area :bio, class: "form-control", rows: "14" %>
    </div>
  </div>
  <div class="row-fluid clearfix">
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
<br />
<div class="row-fluid">
  <div class="col-xs-12 gravatar text-center">
    <%= gravatar_for @member, size: 104%>
      <a href="http://gravatar.com/emails">change</a>
  </div>
</div>
