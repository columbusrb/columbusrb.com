<% provide(:title, @member.name) %>
<div class="row-fluid clearfix">
  <aside class="col-xs-12 text-center">
    <div class="row-fluid">
      <div class="col-xs-12 gravatar">
        <h1><%= @member.name %></h1>
        <%= gravatar_for @member, size: 208 %>
      </div>
    </div>
    <% if @member.github && @member.github != "" %><p>Github: <%= @member.github %></p><% end %>
    <% if @member.twitter && @member.twitter != "" %><p>Twitter: <%= @member.twitter %></p> <% end %>
    <% if @member.website && @member.website != "" %><p>Website: <%= link_to @member.website, @member.website %></p><% end %>
    <br />
  </aside>

</div>
<div class="row-fluid">
  <div class="col-sm-10 col-sm-offset-1">
    <% if @member.bio && @member.bio != "" %><p><%= @member.bio %></p><% end %>
    <br />
  </div>
</div>
<div class="row-fluid">
  <div class="col-sm-offset-1 col-sm-10">
    <% if @member.presentations.count > 0 %><h2>Presentations</h2><% end %>
    <ul class="presentations">
      <%= render @member.presentations %>
    </ul>
  </div>
</div>
