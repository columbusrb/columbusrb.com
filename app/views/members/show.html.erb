<% provide(:title, @member.name) %>
<div class="row-fluid clearfix">
  <aside class="col-xs-12 text-center">
    <div class="row-fluid">
      <div class="col-xs-12 gravatar">
        <h1><%= @member.name %></h1>
        <%= gravatar_for @member, size: 208 %>
      </div>
    </div><br />
    <%= link_to image_tag("iconmonstr-github-icon-32.png", alt: "Github"), "http://github.com/#{@member.github}" %>
    <%= link_to image_tag("iconmonstr-twitter-icon-32.png", alt: "Twitter"), "http://twitter.com/#{@member.twitter}" %>
    <%= link_to image_tag("iconmonstr-link-icon-32.png", alt: "Website"), @member.website %>
  </aside>
</div>
<div class="row-fluid">
  </br>
  <div class="col-sm-10 col-sm-offset-1 text-center">
    <% if @member.bio && @member.bio != "" %><p><%= @member.bio %></p><% end %>
    <br />
  </div>
</div>
<div class="row-fluid">
  <div class="col-sm-offset-1 col-sm-10">
    <% if @member.presentations.count > 0 %><h2>Presentations</h2><% end %>
    <ul class="presentations">
      <%= render @member.presentations %>
    </ul>
  </div>
</div>
