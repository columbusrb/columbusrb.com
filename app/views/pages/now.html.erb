<div style="background-image: url('<%= asset_pack_path('media/images/101.jpg') %>')">
    <div class="bg-purple-700 text-gray-200 font-semibold align-top p-1 text-center font-serif">
        <p>Established 2005 &mdash; <%= pluralize(@members, 'members') %> strong</p>

        <div class="bg-purple-900 p-4">
            <div class="container mx-auto px-6 flex items-center flex-wrap">
                <div class="lg:w-2/3 relative">
                    <div class="text-gray-200">
                        <h1 class="text-2xl font-extrabold">Columbus Ruby Brigade</h1>
                        <div class="font-extrabold align-bottom">
                            Next Meeting:
                        </div>
                        <div class="pt-0">
                            <%= formatted_date(@next_crb.time) %> at Root Insurance
                        </div>
                        <div class="font-bold align-bottom text-xl my-2">
                            Speaking:
                            <%= render collection: @next_crb.speakers, partial: 'speaker' || "<p>There aren't any speakers signed up. Yet.</p>" %>
                        </div>
                        <div class="p-16 lg:p-0 lg:w-1/3">
                            <%= image_pack_tag('media/images/logo.png', class: 'md:m-auto') %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
