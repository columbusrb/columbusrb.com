<% provide(:title, "Edit presentation") %>
<h1>Edit Presentation</h1>

<%= form_for(@presentation) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="row-fluid">
      <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-1">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <% if current_member.admin? %>
          <%= f.label :member_id %>
          <%= f.collection_select :member_id, Member.all, :id, :name, prompt: true, class: 'form-control' %>

          <%= f.label :meeting_id %>
          <%= f.collection_select :meeting_id, Meeting.all, :id, :time, prompt: true, class: 'form-control' %>
        <% end %>

        <%= f.label :slides %>
        <%= f.url_field :slides, class: 'form-control' %>

        <%= f.label :video %>
        <%= f.url_field :video, class: 'form-control' %>
      </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-0">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: "6"  %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
