<% provide(:title, 'Presentations') %>
<div class="row-fluid clearfix">
  <div class="col-sm-offset-1 col-sm-10">
    <h1>Presentations</h1>

    <% if !current_member.nil? && current_member.admin? %>
      <%= link_to "Add New Presentation", new_presentation_path %>
    <% end %>

  </div>
</div>
<div class="row-fluid clearfix text-center">
  <div class="col-sm-offset-1 col-sm-10">
    <%= will_paginate %>

    <ul class="presentations">
      <%= render @presentations.presentations_descending %>
    </ul>

    <%= will_paginate %>
  </div>
</div>